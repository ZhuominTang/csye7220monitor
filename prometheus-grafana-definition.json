{
    "family": "prometheus-grafana-definition",

        "containerDefinitions": [
            {
                "name": "init-container",
                "image": "alpine:latest",
                "cpu": 0,
                "memory": 256,
                "memoryReservation": 64,
                "essential": false,
                "command": [
                    "wget",
                    "https://raw.githubusercontent.com/santosh07bec/ecs-monitoring-with-prometheus-grafana/master/prometheus.yml",
                    "-P",
                    "/mnt"
                ],
                "mountPoints": [
                    {
                        "sourceVolume": "prometheus_config",
                        "containerPath": "/mnt"
                    }
                ]
            },
            {
                "name": "prometheus",
                "image": "prom/prometheus:v2.4.0",
                "cpu": 128,
                "memory": 128,
                "memoryReservation": 64,
                "portMappings": [
                    {
                        "containerPort": 9090,
                        "hostPort": 9090,
                        "protocol": "tcp"
                    }
                ],
                "essential": true,
                "mountPoints": [
                    {
                        "sourceVolume": "prometheus_config",
                        "containerPath": "/etc/prometheus"
                    }
                ],
                "dependsOn": [
                    {
                        "containerName": "init-container",
                        "condition": "COMPLETE"
                    }
                ]
            },
            {
                "name": "grafana",
                "image": "grafana/grafana",
                "cpu": 128,
                "memory": 128,
                "memoryReservation": 64,
                "portMappings": [
                    {
                        "containerPort": 3000,
                        "hostPort": 3000,
                        "protocol": "tcp"
                    }
                ],
                "essential": true
            }
        ],
        "volumes": [
            {
                "name": "prometheus_config",
                "dockerVolumeConfiguration": {
                    "scope": "task",
                    "driver": "local"
                }
            }
        ],

    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "256",
    "memory": "256"
}
